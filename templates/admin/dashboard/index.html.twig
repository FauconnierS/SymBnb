{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col">
				<div class="card bg-primary text-center mb-3 text-white">
					<div class="card-body">
						<div class="row">
							<div class="col-3">
								<i class="fas fa-users fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.users}}
									Utilisateurs</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card bg-success text-white text-center mb-3">
					<div class="card-body">
						<div class="row">
							<div class="col-3">
								<i class="fas fa-hotel fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.bookings}}
									Réservations</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card bg-warning text-white text-center mb-3">
					<div class="card-body">
						<div class="row">
							<div class="col-3">
								<i class="fas fa-folder fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.ads}}
									Annonces</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card bg-info text-white text-center mb-3">
					<div class="card-body">
						<div class="row">
							<div class="col-3">
								<i class="fas fa-comments fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.comments}}
									Commentaires</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col">
				<div class="alert alert-success">
					<h2 class="alert-heading my-3">
						<i class="fas fa-arrow-up mx-2"></i>Les annonces populaires</h2>
					<table class="table table-hover text-white">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for ad in bestAds %}
								<tr>
									<td>{{ad.title}}</td>
									<td>
										{% if ad.avatarName %}
											<img src="/public/images/avatars/{{ad.avatarName}}" alt="" class="avatar avatar-micro mr-2">
										{% endif %}
										{{ad.firstName}}
										{{ad.lastName}}
									</td>
									<td>
										<span class="badge badge-dark">
											{{ad.note | number_format(1, ",", " ")}}</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="col">
				<div class="alert alert-danger">
					<h2 class="alert-heading my-3">
						<i class="fas fa-arrow-down mx-2"></i>Les pires annonces</h2>
					<table class="table table-hover text-white">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for ad in worstAds %}
								<tr>
									<td>{{ad.title}}</td>
									<td>
										{% if ad.avatarName %}
											<img src="/public/images/avatars/{{ad.avatarName}}" alt="" class="avatar avatar-micro mr-2">
										{% endif %}
										{{ad.firstName}}
										{{ad.lastName}}
									</td>
									<td>
										<span class="badge badge-dark">
											{{ad.note | number_format(1, ",", " ")}}</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
